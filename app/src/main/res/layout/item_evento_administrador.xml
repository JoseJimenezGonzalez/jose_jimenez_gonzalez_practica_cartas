<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="6dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/ivFotoEvento"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvNombreEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nombre del evento">
        </TextView>

        <TextView
            android:id="@+id/tvFormatoEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Formato del evento">
        </TextView>

        <TextView
            android:id="@+id/tvFechaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fecha del evento">
        </TextView>

        <TextView
            android:id="@+id/tvPrecioEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Precio">
        </TextView>

        <TextView
            android:id="@+id/tvAforoMaximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Aforo maximo">
        </TextView>

        <TextView
            android:id="@+id/tvAforoOcupado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Aforo ocupado">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnApuntarseEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Apuntarse a evento">
        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/tvAforoLLeno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="YA NO QUEDAN PLAZAS"
            android:visibility="gone">
        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>