<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="232dp"
            android:layout_height="320dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/ivFotoCarta"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvNombreCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nombre de la carta">
        </TextView>

        <TextView
            android:id="@+id/tvExpansion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nombre de la edicion">
        </TextView>

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Precio de la carta">
        </TextView>

        <TextView
            android:id="@+id/tvColorCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Color de la carta">
        </TextView>

        <TextView
            android:id="@+id/tvEstadoCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Estado de la carta">
        </TextView>

        <TextView
            android:id="@+id/tvIdCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Id de la carta">
        </TextView>

        <TextView
            android:id="@+id/tvIdUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Id usuario">
        </TextView>

        <TextView
            android:id="@+id/tvIdReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Id de la reserva">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProcesarPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Procesar pedido">
        </androidx.appcompat.widget.AppCompatButton>




    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>